{
  "compilerOptions": {
    "target": "es2023",
    "lib": ["ES2023", "dom"],
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src", "index.ts"]
}
